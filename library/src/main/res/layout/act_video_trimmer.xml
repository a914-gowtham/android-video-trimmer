<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StyleRoot"
    android:background="#000000"
    android:id="@+id/root_view"
    tools:ignore="ContentDescription">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D000000"
        android:elevation="5dp"
        app:navigationIcon="@drawable/trimmer_arrow_back_white"
        app:titleTextColor="@color/colorWhite" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/txt_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100kb"
                android:visibility="gone"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/txt_change_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1080p"
                android:textSize="16sp"
                android:padding="4dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                app:drawableEndCompat="@drawable/ic_trimmer_arrow_down" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:elevation="1dp"
        style="@style/FView">

        <RelativeLayout style="@style/VWView">

            <ImageView
                android:id="@+id/image_play_pause"
                style="@style/WView"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_circle_lib"
                android:padding="12dp"
                android:src="@drawable/ic_video_play_lib"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progress_circular"
                style="@style/WView"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/view_video_controller"
        android:id="@+id/view_thumbnails"/>

    <LinearLayout
        android:id="@+id/view_timer"
        android:layout_width="match_parent"
        android:background="#4D000000"
        android:elevation="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:layout_marginBottom="55dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/txt_start_duration"
            style="@style/TxtRgStyle22"
            android:layout_marginStart="10dp"
            android:textColor="#ffff"
            android:textSize="14sp"
            android:text="00:00s"
            tools:visibility="visible"
            android:visibility="gone" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_end_duration"
            style="@style/TxtRgStyle22"
            android:layout_marginEnd="10dp"
            android:textColor="#ffff"
            android:textSize="14sp"
            android:text="00:10s"
            tools:visibility="visible"
            android:visibility="gone" />

    </LinearLayout>

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/player_view_lib"
        style="@style/FView"
        android:layout_gravity="center_vertical"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center"
        app:use_controller="false" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>